<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "song-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, :artist %>
  <%= text_input f, :artist %>
  <%= error_tag f, :artist %>

  <%= label f, :lyrics %>
  <%= text_input f, :lyrics %>
  <%= error_tag f, :lyrics %>

  <%= submit "Save", phx_disable_with: "Saving..." %>
</form>
